<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="#E5E7EB"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Event Banner Image -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/ivEventBanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D1D5DB"
                android:contentDescription="Event Banner"
                android:scaleType="centerCrop"
                tools:src="@color/gray_300" />

            <!-- Placeholder Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Event Image: Team Building Summit"
                android:textAlignment="center"
                android:textColor="#6B7280"
                android:textSize="14sp" />

            <!-- Registration Badge (Top Right) -->
            <TextView
                android:id="@+id/tvRegistrationBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                android:background="@drawable/bg_registration_badge"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="Registered"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />

        </FrameLayout>

        <!-- Event Details Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Event Title and Spots Badge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal">

                <!-- Event Title -->
                <TextView
                    android:id="@+id/tvEventTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#1F2937"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Annual Team Building Summit" />

                <!-- Spots Badge -->
                <TextView
                    android:id="@+id/tvSpotsBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_spots_badge"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="8 spots left"
                    android:textColor="#6B7280"
                    android:textSize="11sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Event Description -->
            <TextView
                android:id="@+id/tvEventDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#6B7280"
                android:textSize="13sp"
                tools:text="Join us for a fun-day of engaging activities and workshops." />

            <!-- Event Info Icons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <!-- Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="Date"
                        android:src="@drawable/ic_calendar"
                        app:tint="#6B7280" />

                    <TextView
                        android:id="@+id/tvEventDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="#6B7280"
                        android:textSize="13sp"
                        tools:text="Fri, Dec 19, 2025" />
                </LinearLayout>

                <!-- Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="Time"
                        android:src="@drawable/ic_time"
                        app:tint="#6B7280" />

                    <TextView
                        android:id="@+id/tvEventTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="#6B7280"
                        android:textSize="13sp"
                        tools:text="09:00 AM - 05:00 PM" />
                </LinearLayout>

                <!-- Location -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="Location"
                        android:src="@drawable/ic_location"
                        app:tint="#6B7280" />

                    <TextView
                        android:id="@+id/tvEventLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="#6B7280"
                        android:textSize="13sp"
                        tools:text="Grand Conference Hall" />
                </LinearLayout>

            </LinearLayout>

            <!-- View Details Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDetails"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#1F2937"
                android:text="View Details"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="8dp" />

            <!-- Join Waitlist Button (Alternative) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnJoinWaitlist"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:text="Join Waitlist"
                android:textAllCaps="false"
                android:textColor="#1F2937"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:cornerRadius="8dp"
                app:strokeColor="#1F2937"
                app:strokeWidth="1dp"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>