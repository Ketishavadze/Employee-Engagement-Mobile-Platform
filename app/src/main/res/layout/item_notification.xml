<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvSectionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9FAFB"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="@string/new_notification"
        android:textColor="#6B7280"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/llNotificationItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp">

        <ImageView
            android:id="@+id/ivNotificationIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Notification Icon"
            android:padding="10dp"
            app:tint="#6B7280"
            tools:src="@drawable/ic_calendar" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNotificationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:textColor="#1F2937"
                android:textSize="14sp"
                tools:text="Registration Confirmed: You are now registered for the 'Leadership Workshop: Effective Communication'." />

            <TextView
                android:id="@+id/tvNotificationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#9CA3AF"
                android:textSize="12sp"
                tools:text="15 minutes ago" />

        </LinearLayout>

        <View
            android:id="@+id/viewUnreadIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_unread_indicator"
            android:visibility="visible"
            tools:visibility="visible" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="68dp"
        android:background="#F3F4F6" />

</LinearLayout>