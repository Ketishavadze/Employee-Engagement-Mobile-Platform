<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="#E5E7EB"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Date Badge -->
        <LinearLayout
            android:id="@+id/llDateBadge"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="JAN" />

            <TextView
                android:id="@+id/tvDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1F2937"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="18" />

        </LinearLayout>

        <!-- Event Category -->
        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="#6B7280"
            android:textSize="13sp"
            app:layout_constraintEnd_toStartOf="@id/tvStatus"
            app:layout_constraintStart_toEndOf="@id/llDateBadge"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Team Building" />

        <!-- Status Badge -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_status_badge"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:textColor="#10B981"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Available" />

        <!-- Event Title -->
        <TextView
            android:id="@+id/tvEventTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#1F2937"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/llDateBadge"
            app:layout_constraintTop_toBottomOf="@id/tvCategory"
            tools:text="Annual Team Building Summit" />

        <!-- Time -->
        <ImageView
            android:id="@+id/ivTimeIcon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Time"
            android:src="@drawable/ic_time"
            app:layout_constraintStart_toEndOf="@id/llDateBadge"
            app:layout_constraintTop_toBottomOf="@id/tvEventTitle"
            app:tint="#6B7280" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="#6B7280"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/ivTimeIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivTimeIcon"
            app:layout_constraintTop_toTopOf="@id/ivTimeIcon"
            tools:text="09:00 AM - 05:00 PM" />

        <!-- Location -->
        <ImageView
            android:id="@+id/ivLocationIcon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:contentDescription="Location"
            android:src="@drawable/ic_location"
            app:layout_constraintStart_toEndOf="@id/llDateBadge"
            app:layout_constraintTop_toBottomOf="@id/ivTimeIcon"
            app:tint="#6B7280" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#6B7280"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/ivLocationIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivLocationIcon"
            app:layout_constraintTop_toTopOf="@id/ivLocationIcon"
            tools:text="Grand Conference Hall" />

        <!-- Registration Info -->
        <ImageView
            android:id="@+id/ivRegisteredIcon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Registered"
            android:src="@drawable/ic_team"
            app:layout_constraintStart_toEndOf="@id/llDateBadge"
            app:layout_constraintTop_toBottomOf="@id/ivLocationIcon"
            app:tint="#6B7280" />

        <TextView
            android:id="@+id/tvRegisteredCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="#6B7280"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/ivRegisteredIcon"
            app:layout_constraintStart_toEndOf="@id/ivRegisteredIcon"
            app:layout_constraintTop_toTopOf="@id/ivRegisteredIcon"
            tools:text="142 registered" />

        <!-- Spots Info -->
        <ImageView
            android:id="@+id/ivSpotsIcon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="16dp"
            android:contentDescription="Spots"
            android:src="@drawable/ic_event_seat"
            app:layout_constraintBottom_toBottomOf="@id/ivRegisteredIcon"
            app:layout_constraintStart_toEndOf="@id/tvRegisteredCount"
            app:layout_constraintTop_toTopOf="@id/ivRegisteredIcon"
            app:tint="#6B7280" />

        <TextView
            android:id="@+id/tvSpotsLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="#6B7280"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/ivSpotsIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivSpotsIcon"
            app:layout_constraintTop_toTopOf="@id/ivSpotsIcon"
            tools:text="8 spots left" />

        <!-- Waitlist Info (Alternative to Spots) -->
        <ImageView
            android:id="@+id/ivWaitlistIcon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="16dp"
            android:contentDescription="Waitlist"
            android:src="@drawable/ic_profile"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/ivRegisteredIcon"
            app:layout_constraintStart_toEndOf="@id/tvRegisteredCount"
            app:layout_constraintTop_toTopOf="@id/ivRegisteredIcon"
            app:tint="#6B7280"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvWaitlistCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="#6B7280"
            android:textSize="13sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/ivWaitlistIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivWaitlistIcon"
            app:layout_constraintTop_toTopOf="@id/ivWaitlistIcon"
            tools:text="12 on waitlist"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>